<script src="../js/theme.js" type="text/javascript"></script>
<script src="../js/script-mon-espace.js" type="text/javascript"></script>
<script>
	$(".btn-plus-info").click(function(){
		setTimeout(function(){
			$(".jjj").each(function(i){
				var w = $(this).width();
				if (w > 0) {
					$(".modal-artiste-video").height(w*315/560);
					return false;
				}
			});
		}, 1000);
	});
	$(window).resize(function() {
		$(".jjj").each(function(i){
			var w = $(this).width();
			if (w > 0) {
				$(".modal-artiste-video").height(w*315/560);
				return false;
			}
		});
	});
	$("#menu-courses").css('color', '#f11286');
	$("#sidebar-menu-connexion").css('color', '#F11286');
</script>
<script type="text/javascript">
	$("#title-page-nav").append("Espace Courses");
</script>

</body>
</html>
