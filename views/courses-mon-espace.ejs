<!DOCTYPE html>
<html>
<head>
    <%- include head.ejs %>
</head>

<body>

<!-- Preloader --> <!--
 <!--
<section id="preloader">
    <div class="loader" id="loader">
        <div class="loader-img"></div>
    </div>
</section>
<!-- End Preloader -->

<!-- Sidebar Menu -->
<%- include sidebar.ejs %>
<!-- End Sidebar Menu -->

<!-- Site Wraper -->
<div class="wrapper">

    <!-- Header ("header--dark", "header-transparent", "header--sticky")-->
    <%- include header.ejs %>
    <!-- End Header -->


    <!-- CONTENT --------------------------------------------------------------------------------->

    <!-- About Section -->
    <section id="about" class="pt pt-sm-60 pb-3">
        <div class="container text-center">
            <div class="row">
                <div class="col">
                    <div class="col-md-8 offset-md-2"></div>
                    <h2 class="m-0">
                        <span class="color-courses">Mon Espace Courses</span><br />
                    </h2>
                    <h4>
                        <span class="text-original-case">Toutes les informations de mon équipe pour les courses</span>
                    </h4>
                </div>
            </div>
        </div>
    </section>
    <!-- End About Section -->

    <section class="pt-3 pb-1" style="background-color: rgba(255,203,41,0.42)">
        <div class="rowm-auto text-center">
            <div>
                <span id="participationValidee" class="badge-success text-center p-2 d-none">Participation validée<b></b></span>&nbsp;
                <span id="participationRejetee" class="badge-danger text-center p-2 d-none">Participation rejetée<b></b></span>&nbsp;
                <span id="participationEnCours" class="badge-primary text-center p-2 d-nosne">Participation en cours de validation</span>
            </div>
            <div class="p-2">
                <h6 class="d-inline">Mon équipe : <h3 class="d-inline text-original-case"><b><% if(locals.equipe) { %><%= equipe.equipe_nom %><% }else{ %>??<% } %></b></h3></h6><br>
                <h6 class="d-inline color-gris-4">Catégorie : <h5 class="d-inline text-original-case color-gris-4"><b><% if(locals.categorie) { %><%= categorie.categorie_nom %><% }else{ %>??<% } %></b></h5></h6><br>
                <p class="d-inline color-gris-4"><% if(locals.categorie) { %><%= categorie.categorie_description %><% }else{ %>??<% } %></p>
                <div class="m-auto"><a class="btn btn-black btn-md" href="/courses/deconnexion">Deconnexion</a></div>
            </div>
        </div>
    </section>

    <section class="pt-4 pb" style="background-color: rgba(255,203,41,0.1)">
        <div class="row m-auto pr-3 pl-3 pb-3" style="max-width: 1500px">
            <div class="m-auto col-12" style="max-width: 100%; overflow: auto;">
                <% if (locals.coureurs && coureurs.length != 0){ %>
                <table class="table table-password table-striped p-2 table-sm" id="">
                    <thead>
                    <tr>
                        <th class="d-none">ID</th>
                        <th style="min-width:150px">Prénom</th>
                        <th style="min-width:150px">Nom</th>
                        <th style="min-width:200px">Contact</th>
                        <th style="min-width:200px">Commentaires</th>
                        <th style="min-width:70px; max-width:80px">Paiement</th>
                        <th style="min-width:70px; max-width:80px">Certificat</th>
                        <th name="buttons"></th>
                    </tr>
                    </thead>
                    <tbody id="bodyTable">
                    <% locals.coureurs.forEach((raw, index) => { %>
                    <tr>
                        <td class="idRaw"hidden><%= raw.coureur_id %></td>
                        <td class="prenomRaw"><%= raw.coureur_prenom %></td>
                        <td class="nomRaw"><%= raw.coureur_nom %></td>
                        <td class="contactRaw">
                            <% if (raw.coureur_email != undefined && raw.coureur_email != null){ %><%= raw.coureur_email %><% } %>
                            <% if (raw.coureur_telephone != undefined && raw.coureur_telephone != null){ %><br><%= raw.coureur_telephone %><% } %>
                        </td>
                        <td class="commentaireRaw"><%= raw.coureur_commentaire %></td>
                        <td class="paiementRaw" style="min-width:140px; max-width:150px">
                            <% if (raw.coureur_paiement == 1){ %>
                                <span class="badge-success p-1">Reçu</span>
                            <% }else if (raw.coureur_paiement == 0){ %>
                                <% if (raw.coureur_etudiant == 1 && locals.categorie){ %>
                                    <span class="badge-danger p-1">Non Reçu : <%= categorie.categorie_prix_va %>€</span>
                                <% }else if (raw.coureur_etudiant == 0 && locals.categorie){ %>
                                    <span class="badge-danger p-1">Non Reçu : <%= categorie.categorie_prix_normal %>€</span>
                                <% }else{ %>
                                    <span class="badge-danger p-1">Non Reçu</span>
                                <% } %>
                            <% } %></td>
                        <td class="certificatRaw" style="min-width:120px; max-width:150px"><% if (raw.coureur_certificat_valide == 1){ %><span class="badge-success p-1">Reçu</span><% }else if (raw.coureur_certificat_valide == 0){ %><span class="badge-danger p-1">Non Reçu</span><% } %></td>
                        <td class="buttonRaw" name="buttons"></td>
                    </tr>
                    <% }) %>
                    </tbody>
                </table>
                <% }else{ %>
                <div id="" class="text-center p-2 m-auto"><h3 class="">Aucun coureur trouvé pour l'équipe.</h3>
                    <br><h5>Si aucun coureur n'est enregistré, l'équipe ne sera pas inscrite et la participation sera rejetée.</h5>
                </div>
                <% } %>
            </div>
            <div class="m-auto col-12 text-center m-auto">
                <% if(locals.categorie && locals.coureurs) { %>
                    <% if(categorie.categorie_nb_max > coureurs.length) { %>
                        <button id="" onclick="$('#modalAjout').modal({show:true})" class="btn btn-white btn-md">Ajouter un coureur dans l'équipe</button>
                    <% } %>
                <% }else{ %>

                <% } %>
            </div>
        </div>
    </section>

    <div class="modal fade" id="modalAjout" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content" style="margin-top: 90px">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">AJOUT D'UN COUREUR</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="form-label-group">
                            <form class="contact-form" method="post" action="/courses/ajouter-coureur">
                                <div class="form-field-wrapper">
                                    <h6>Prénom</h6>
                                    <input class="input-sm form-full" id="" type="text" name="coureur_prenom" placeholder="Prénom" required>
                                </div>
                                <div class="form-field-wrapper">
                                    <h6>Nom</h6>
                                    <input class="input-sm form-full" id="" type="text" name="coureur_nom" placeholder="Nom" required>
                                </div>
                                <div class="form-field-wrapper">
                                    <h6>Date de naissance</h6>
                                    <input class="input-sm form-full" id="" type="date" name="coureur_date_naissance" placeholder="25/12/2000" required>
                                </div>
                                <div class="form-field-wrapper">
                                    <h6>Je suis étudiant INSA avec une carte VA</h6>
                                    <select class="input-sm form-full" id="form-to" type="text" name="coureur_etudiant" value="">
                                        <option value="0">Non</option>
                                        <option value="1">Oui</option>
                                    </select>
                                </div>
                                <div class="form-field-wrapper">
                                    <h6>Taille tee-shirt</h6>
                                    <select class="input-sm form-full" id="form-to" type="text" name="coureur_taille_tee_shirt" placeholder="">
                                        <option value="NO">Choisir taille</option>
                                        <option value="S">S</option>
                                        <option value="M">M</option>
                                        <option value="L">L</option>
                                        <option value="XL">XL</option>
                                    </select>
                                </div>
                                <div class="form-field-wrapper">
                                    <h6>Telephone</h6>
                                    <input class="input-sm form-full" id="" type="text" name="coureur_telephone" placeholder="Téléphone">
                                </div>
                                <div class="form-field-wrapper">
                                    <h6>Email</h6>
                                    <input class="input-sm form-full" id="" type="text" name="coureur_email" placeholder="Email">
                                </div>
                                <div class="form-field-wrapper">
                                    <h6>Commentaire</h6>
                                    <input class="input-sm form-full" id="" type="text" name="coureur_commentaire" placeholder="Un Commentaire ?">
                                </div>
                                <button class="btn btn-md btn-black form-full btn-send mb-2" type="submit" id="form-submit" name="submit">Ajouter</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalConfirmDelete" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Supprimer un coureur</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Attention, cette action est irréversible, le coureur sera définitivement supprimé de l'équipe.<br>
                    Si le paiement a déjà été effectué, aucun remboursement n'est possible.<br>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnNO">Annuler</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnYES">Supprimer</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modalEdit" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" style="margin-top: 90px">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">METTRE A JOUR UN COUREUR</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="form-label-group">
                        <form class="contact-form update-coureur" method="post" action="/courses/updater-coureur">
                            <div class="form-field-wrapper d-none">
                                <h6>Id</h6>
                                <input class="input-sm form-full" id="" type="text" name="coureur_id" value="" required>
                            </div>
                            <div class="form-field-wrapper">
                                <h6>Prénom</h6>
                                <input class="input-sm form-full" id="" type="text" name="coureur_prenom" value="" required>
                            </div>
                            <div class="form-field-wrapper">
                                <h6>Nom</h6>
                                <input class="input-sm form-full" id="" type="text" name="coureur_nom" value="" required>
                            </div>
                            <div class="form-field-wrapper">
                                <h6>Date de naissance</h6>
                                <input class="input-sm form-full" id="" type="date" name="coureur_date_naissance" value="" required>
                            </div>
                            <div class="form-field-wrapper">
                                <h6>Je suis étudiant INSA avec une carte VA</h6>
                                <select class="input-sm form-full" id="form-to" type="text" name="coureur_etudiant" value="">
                                    <option value="0">Non</option>
                                    <option value="1">Oui</option>
                                </select>
                            </div>
                            <div class="form-field-wrapper">
                                <h6>Taille tee-shirt</h6>
                                <select class="input-sm form-full" id="form-to" type="text" name="coureur_taille_tee_shirt" value="">
                                    <option value="NO">Choisir taille</option>
                                    <option value="S">S</option>
                                    <option value="M">M</option>
                                    <option value="L">L</option>
                                    <option value="XL">XL</option>
                                </select>
                            </div>
                            <div class="form-field-wrapper">
                                <h6>Telephone</h6>
                                <input class="input-sm form-full" id="" type="text" name="coureur_telephone" value="">
                            </div>
                            <div class="form-field-wrapper">
                                <h6>Email</h6>
                                <input class="input-sm form-full" id="" type="text" name="coureur_email" value="">
                            </div>
                            <div class="form-field-wrapper">
                                <h6>Commentaire</h6>
                                <input class="input-sm form-full" id="" type="text" name="coureur_commentaire" value="">
                            </div>
                            <button class="btn btn-md btn-black form-full btn-send mb-2" type="submit" id="form-submit" name="submit">Mettre à jour</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>

    <!-- END CONTENT ---------------------------------------------------------------------------->

    <!-- FOOTER -->
    <%- include footer.ejs %>
    <!-- END FOOTER -->

    <!-- Scroll Top -->
    <a class="scroll-top">
        <i class="fa fa-angle-double-up"></i>
    </a>
    <!-- End Scroll Top -->

</div>
<!-- Site Wraper End -->


