<!DOCTYPE html>
<html>
<head>
    <%- include head.ejs %>
</head>

<body>

    <!-- Preloader --> <!--
    <section id="preloader">
        <div class="loader" id="loader">
            <div class="loader-img"></div>
        </div>
    </section>
    <!-- End Preloader -->

    <!-- Sidebar Menu -->
        <%- include sidebar.ejs %>
    <!-- End Sidebar Menu -->

    <!-- Site Wraper -->
    <div class="wrapper">

        <!-- Header ("header--dark", "header-transparent", "header--sticky")-->
            <%- include header.ejs %>
        <!-- End Header -->


        <!-- CONTENT --------------------------------------------------------------------------------->

        <!-- About Section -->
        <section id="about" class="pt pt-sm-60">
            <div class="container text-center">
                <div class="row">
                    <div class="col">
                        <div class="col-md-8 offset-md-2"></div>
                        <h2 class="m-0">
                            <span class="">Comment Payer ?</span><br />
                        </h2>
                        <h4>
                            <span class="text-original-case">Espèce, CB ou Lyf Pay, c'est vous qui voyez</span>
                        </h4>
                    </div>
                </div>
            </div>
        </section>
        <!-- End About Section -->

        <section class="bg-light  ptb-60" id="statement" style="background-size: cover; background-image: url('../img/bars/payer_espece.png'); background-position: center">
            <div class="container text-center">
                <div class="row">
                    <div class="col-md-8 offset-md-2">
                        <h3 class="mb-15"><span class="p-2" style="background: white; border-radius: 3px; line-height: 30px;">En espèce</span></h3>
                    </div>
                </div>
            </div>
        </section>
        <section class="bg-light  ptb-60" id="statement" style="background-size: cover; background-image: url('../img/bars/payer_cb.png'); background-position: center">
            <div class="container text-center">
                <div class="row">
                    <div class="col-md-8 offset-md-2">
                        <h3 class="mb-15"><span class="p-2" style="background: white; border-radius: 3px; line-height: 30px;">En Carte Bleu</span></h3>
                        <h3 class="mb-15"><span class="p-2" style="background: white; border-radius: 3px; line-height: 30px;">En Sans Contact</span></h3>
                    </div>
                </div>
            </div>
        </section>
        <section class="bg-light ptb-80" id="statement" style="background-size: cover; background-image: url('../img/bars/payer_lyfpay.png'); background-position: center">
            <div class="container text-center">
                <div class="row">
                    <div class="col-md-8 offset-md-2">
                        <h3 class="mb-15"><span class="p-2" style="background: white; border-radius: 3px; line-height: 30px;">Avec LYF PAY</span></h3>
                        <a class="btn btn-md btn-white btn-plus-info" data-toggle="modal" data-target="#lyfpay-modal">Infos et code promo</a>
                    </div>
                </div>
            </div>
            <div class="modal fade m-auto p-0" id="lyfpay-modal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" style="padding-top: 50px;" role="document">
                    <div class="modal-content">
                        <div class="modal-body jjj">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <h3 class="modal-title text-center" style="padding-left:13px;">PAIEMENT LYF PAY</h3>
                            <h5 class="letter-spacing-1 text-center m-0">Ne fait pas la queue et paie avec ton téléphone !</h5>
                            <h6 class="letter-spacing-1 text-center m-0 pb-2">3€ OFFERT SUR TA PREMIERE CONSO SUR LES 24H DE L'INSA*</h6>
                            <p class="text-center m-0">INFOGRAPHIE AVEC MODALITES / ETAPES / CODE PROMO ICI</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- END CONTENT ---------------------------------------------------------------------------->

        <!-- FOOTER -->
            <%- include footer.ejs %>
        <!-- END FOOTER -->

        <!-- Scroll Top -->
        <a class="scroll-top">
            <i class="fa fa-angle-double-up"></i>
        </a>
        <!-- End Scroll Top -->

    </div>
    <!-- Site Wraper End -->


    <!-- JS -->

    <script src="../js/plugin/jquery.easing.js" type="text/javascript"></script>
    <script src="../js/jquery-ui.min.js" type="text/javascript"></script>
    <script src="../js/bootstrap.min.js" type="text/javascript"></script>
    <script src="../js/plugin/jquery.flexslider.js" type="text/javascript"></script>
    <script src="../js/plugin/jquery.fitvids.js" type="text/javascript"></script>
    <script src="../js/plugin/jquery.viewportchecker.js" type="text/javascript"></script>
    <script src="../js/plugin/jquery.stellar.min.js" type="text/javascript"></script>
    <script src="../js/plugin/wow.min.js" type="text/javascript"></script>
    <script src="../js/plugin/jquery.colorbox-min.js" type="text/javascript"></script>
    <script src="../js/plugin/owl.carousel.min.js" type="text/javascript"></script>
    <script src="../js/plugin/isotope.pkgd.min.js" type="text/javascript"></script>
    <script src="../js/plugin/masonry.pkgd.min.js" type="text/javascript"></script>
    <script src="../js/plugin/imagesloaded.pkgd.min.js" type="text/javascript"></script>
    <script src="../js/plugin/jquery.fs.tipper.min.js" type="text/javascript"></script>
    <script src="../js/plugin/mediaelement-and-player.min.js"></script>
    <script src="../js/theme.js" type="text/javascript"></script>
    <script>
		$(".btn-plus-info").click(function(){
			setTimeout(function(){
				$(".jjj").each(function(i){
					var w = $(this).width();
					if (w > 0) {
						$(".modal-artiste-video").height(w*315/560);
						return false;
                    }
				});
			}, 1000);
		});
		$(window).resize(function() {
			$(".jjj").each(function(i){
				var w = $(this).width();
				if (w > 0) {
					$(".modal-artiste-video").height(w*315/560);
					return false;
				}
			});
		});
    </script>
    <script type="text/javascript">
		$("#menu-infos-pratiques").css('color', '#F11286');
		$("#sidebar-menu-payer").css('color', '#F11286');
		$("#title-page-nav").append("Comment Payer ?");
    </script>
    
</body>
</html>
