				}
				skillsProgressBar();
				function skillsProgressBar() {
					$('.skillbar').each(function () {
						$(this).find('.skillbar-bar').animate({
							width: $(this).attr('data-percent')
						}, {duration: 1000,
                            complete: function(){
                                if($(this).parent().parent().attr('data-percent').split('%')[0]>99.9){
                                    $(this).parent().parent().find('.soldout-tarif-zone').removeClass('d-none');
                                }
                            }
						});
