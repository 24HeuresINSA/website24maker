		$('.countdown').downCount({
			date: '05/17/2019 19:00:00',
			offset: +10
		}, function () {
		});
    </script>
    <script type="text/javascript">
		$("#menu-infos-pratiques").css('color', '#E20917');
		$("#sidebar-menu-faq").css('color', '#E20917');
        $("#title-page-nav").append("FAQ");
    </script>


    
</body>
</html>
