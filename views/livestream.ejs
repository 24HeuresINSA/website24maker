    <style type="text/css">
        /* counter clock css */
        ul.countdown {
            list-style: none;
            padding: 0;
            display: block;
            text-align: center;
            font-family: 'arial', sans-serif !important;
        }

        .font-billetterie-date3{
            font-size: 50px;
            line-height: 42px;
        }

        ul.countdown li {
            display: inline-block;
        }

        ul.countdown li span {
            font-size: 75px;
            font-weight: 300;
            color: #E20917;

        }

        ul.countdown li.seperator {
            font-size: 3vw;
            line-height: 30px;
            vertical-align: top;
            color: #E20917;

        }

        ul.countdown li p {
            color: #E20917;
            font-size: 3vw;
        }
        /* emd counter clock css */

        @media (max-width: 767px) {

            .text-center-xs {
                text-align: center;
            }
        }

        @media (min-width: 1000px) {
            .font-billetterie-date{
                font-size: 90px;
            }

            .font-billetterie-date2{
                font-size: 30px;
            }

            ul.countdown li span {
                font-size: 90px;
                color: #E20917;
                font-weight: 300;
            }

            ul.countdown li.seperator {
                font-size: 60px;
                line-height: 40px;
                vertical-align: top;
                color: #E20917;

            }

            ul.countdown li p {
                color: #E20917;
                font-size: 28px;
            }
        }

        @media (max-width: 600px) {
            .font-billetterie-date{
                font-size: 90px;
            }
            .font-billetterie-date2{
                font-size: 15px;
            }

            ul.countdown li span {
                font-size: 30px;
                color: #E20917;
                font-weight: 300;
            }

            ul.countdown li.seperator {
                font-size: 15px;
                line-height: 40px;
                vertical-align: top;
                color: #E20917;

            }

            ul.countdown li p {
                color: #E20917;
                font-size: 15px;
            }
        }
    </style>

    <!-- Header ("header--dark", "header-transparent", "header--sticky")-->
    <%- include header.ejs %>
    <!-- End Header -->

    <!-- JS -->

    <!-- CONTENT --------------------------------------------------------------------------------->

    <section class="inner-intro dark-bg bg-image overlay-dark parallax parallax-background5"
             style="background-position: center;
                    top: 50px"
             data-background-img="/img/background/live-nb.jpg">
        <div class="container m-auto"
             style="display: flex;
                    justify-content: center;
                    flex-direction: column">
            <div class="testimonial text-center pb-lg-4">
                <span class="font-billetterie-date3">
                    Retrouvez en LiveStream les artistes
                </span><br>
                <span class="font-billetterie-date2">
                    le vendredi 21 Mai et le Samedi 22 Mai de 20h à 00h ! <br>
                    Profitez tous ensemble de ces soirées de concerts !
                </span>
            </div>
            <div class="testimonial text-center dark-color">
                <% now = new Date();
                disp9 = new Date('2021-05-18T19:30:00')
                if (now < disp9) {
                %>
                    <ul class="countdown pt-4 pb-80" style="color: #E20917;">
                        <li>
                            <span class="days">00</span>
                            <p class="days_ref">days</p>
                        </li>
                        <li class="seperator">.</li>
                        <li>
                            <span class="hours">00</span>
                            <p class="hours_ref">hours</p>
                        </li>
                        <li class="seperator">:</li>
                        <li>
                            <span class="minutes">00</span>
                            <p class="minutes_ref">minutes</p>
                        </li>
                        <li class="seperator">:</li>
                        <li>
                            <span class="seconds">00</span>
                            <p class="seconds_ref">seconds</p>
                        </li>
                    </ul>
                <% } %>

                <% now = new Date();
                disp2 = new Date('2021-05-18T19:30:00')
                if (now > disp2){
                %>
                    <div class="live-button">
                        <span class="live-txt">
                            <a href="https://shotgun.live/fr/events/292582/stream"> Rejoindre le live ici </a>
                        </span>
                    </div>
                <% } %>
            </div>
        </div>
    </section>


        <% now = new Date();
