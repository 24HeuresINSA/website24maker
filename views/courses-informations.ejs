                    <div class="item">
                        <div class="client-logo m-2 ml-4 mr-4">
                            <img src="../img/partenaires/logo_weleda_nb_sf.png" alt="" style="object-fit: scale-down" />
                        </div>
                    </div>
                    <div class="item">
                        <div class="client-logo m-2 ml-4 mr-4">
                            <img src="../img/partenaires/logo_therascience_couleur_fond.jpg" alt="" style="object-fit: scale-down" />
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Work Section -->
        
